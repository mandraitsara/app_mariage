{% extends 'base.html.twig' %}

{% block title %}Catégorie {% endblock %}

{% block body %}
    <h2>Liste des Catégories : </h2>

    <table class="table">
        <thead>
            <tr>
                <th>Titre : </th>
                <th>Sous-Titre : </th>
                <th>Commentaire : </th>
            </tr>
        </thead>
        <tbody>
            {% for categorie in categories %}
                <tr>
                    <td>{{ categorie.TitreCategorie }}</td>
                    <td>{{ categorie.SoustitreCategorie }}</td>
                    <td>{{ categorie.Content }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">Aucun prestataire trouvé</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    <a class="btn btn-primary" href="{{ path('app_new_contact') }}"> Retour </a>
{% endblock %}
